<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wbl.egr.uri.anearframework.DemoBandActivity">

    <Button
        android:id="@+id/consent_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request HR Consent"/>

    <Button
        android:id="@+id/connect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect"/>

    <Button
        android:id="@+id/start_stream_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Stream"/>

    <Button
        android:id="@+id/stop_stream_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Stream"/>

    <Button
        android:id="@+id/disconnect_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"/>

</LinearLayout>
